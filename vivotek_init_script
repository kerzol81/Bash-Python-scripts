#!/bin/bash
# /etc/init.d/vivotekd
#

### BEGIN INIT INFO
# Provides:          vivotekd
# Required-Start:    networking ntp
# Required-Stop:     $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start daemon at boot time
# Description:       Initializes the Vivotek Stream Recorder script.
### END INIT INFO

PATH=/sbin:/bin:/usr/sbin:/usr/bin
DAEMON=/usr/bin/vivotekd
NAME="Vivotek daemon"

test -x $DAEMON | exit 5

. /lib/lsb/init-functions

# start - stop - status functions

case "$1" in
  
  start)
    echo "Starting $NAME"
    log_daemon_msg "Starting $NAME"
    . /usr/bin/vivotekd &
    log_end_msg $status
    ;;
  
  stop)
    echo "Stopping $NAME"
    log_daemon_msg "Stopping $NAME"
    pkill vivotekd
    log_end_msg $?
    ;;
  
  status)
    status_of_proc $DAEMON $NAME
    ;;
  
  *)
    echo "Usage: /etc/init.d/vivotekd {start|stop|status}"
    exit 1
    ;;
esac

exit 0
